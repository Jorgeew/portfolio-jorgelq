---	
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "animate.css";

import "../styles/tailwind.css";
import '@fontsource-variable/onest';
import onestWoff2 from "@fontsource-variable/onest/files/onest-latin-wght-normal.woff2";

import { ClientRouter } from "astro:transitions";
interface Props{
	title: string;
	description: string;
}

const { description, title } = Astro.props;


---

<!doctype html>
<html lang="es" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="description" content={description}>
		<!-- …tus metas… -->
		<link
			rel="preload"
			as="font"
			type="font/woff2"
			href={onestWoff2}
			crossorigin
	 	 />

		 <!-- Open Graph -->
		 <meta property="og:type" content="website" />
		 <meta property="og:url" content="https://jorgelq.com" />
		 <meta property="og:title" content={title} />
		 <meta property="og:description" content={description} />
		 <meta property="og:image" content="../public/og-image.png" />
		 <!-- Twitter -->
		 <meta name="twitter:card" content="summary_large_image" />
		 <meta name="twitter:title" content={title} />
		 <meta name="twitter:description" content={description} />
		 <meta name="twitter:image" content="../public/og-image.png" />

		 

		<!-- JSON-LD global: Person + WebSite -->
		<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "Person",
			"name": "Jorge Larrosa Quesada",
			"url": "https://jorgelq.com",
			"jobTitle": "Desarrollador de Realidad Mixta y Virtual",
			"sameAs": [
				"https://www.linkedin.com/in/jorge-larrosa-quesada/"
		]
		}
		</script>

		<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "WebSite",
			"name": "Jorge Larrosa Quesada – Portfolio",
			"url": "https://jorgelq.com"
		}
		</script>
		<ClientRouter />
	</head>
	<body>
		<!-- Fondo -->
		<div
  			class="fixed inset-0 -z-10 w-full min-h-screen bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(59,130,246,0.35),rgba(255,255,255,0))]">
		</div>
		<!-- Fin Fondo -->

		<Header />
		<slot />
		<Footer />
	</body>
</html>

<style is:global>
	html {
		font-family: 'Onest Variable', sistem-ui, sans-serif;
		scroll-behavior: smooth;
	}
	body {
		color: #fff;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
		background-color: #0a0a0a;
	}

	@media (prefers-reduced-motion: reduce) {
    html { scroll-behavior: auto; }
    * {
      animation: none !important;
      transition: none !important;
      scroll-behavior: auto !important;
    }
  }
</style>

<script is:inline>
	const REVEAL_SELECTOR = '[data-animate]';
  
	function revealStagger() {
	  const nodes = [...document.querySelectorAll(REVEAL_SELECTOR)];
	  if (!nodes.length) return;
  
	  // 1) Asegura estado inicial oculto (por si vuelves atrás y ya no lo tienen)
	  nodes.forEach(el => {
		el.classList.add('opacity-0', 'translate-y-2', 'will-change-transform');
	  });
  
	  // 2) Stagger reveal
	  nodes.forEach((el, i) => {
		const delay = i * 120; // ms
		setTimeout(() => {
		  el.classList.remove('opacity-0', 'translate-y-2');
		  el.style.willChange = 'auto';
		}, delay);
	  });
	}
  
	// Dispara en la primera carga y en navegaciones de Astro
	document.addEventListener('astro:page-load', revealStagger);
	document.addEventListener('astro:after-swap', revealStagger);
  
	// Fallbacks
	document.addEventListener('DOMContentLoaded', revealStagger);
	window.addEventListener('pageshow', (e) => {
	  // Si venimos del bfcache, algunos scripts no re-ejecutan
	  if (e.persisted) revealStagger();
	});
</script>
  