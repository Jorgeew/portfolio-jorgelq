---
import Download from "../icons/Download.astro";
import WorkIcon from "../icons/Work.astro";
import BookIcon from "../icons/Book.astro";

interface Props {
    title: string;
    working: boolean;
    date: string;
    archivo?: string;
    type: string;
    children: any;
}

const { title, working, date, archivo, type, children } = Astro.props;


---

<ol class="relative border-s border-gray-200 dark:border-gray-700">                  
    <li class="mb-10 ms-6">            
        <span class="absolute flex items-center justify-center w-6 h-6 bg-blue-100 rounded-full -start-3 ring-8 ring-white dark:ring-gray-900 dark:bg-blue-900">
            {type === "work" ? (
                <WorkIcon class="w-6 h-6 text-blue-400" />
            ) : (
                <BookIcon class="w-6 h-6 text-purple-400" />
            )}
        </span>
        {working ? (
            <h3 class="flex items-center mb-1 text-lg font-semibold text-pink-400">{title} <span class="bg-blue-100 text-blue-800 text-sm font-medium me-2 px-2.5 py-0.5 rounded-sm green-500 ms-3">Actualmente</span></h3>
        ) : (
            <h3 class="flex items-center mb-1 text-lg font-semibold text-pink-400">{title}</h3>
        )}
        <time class="text-left block py-2 text-sm font-normal leading-none text-gray-400 dark:text-gray-500">{date}</time>

        <div class="text-left prose prose-invert sm:prose-lg lg:prose-xl max-w-none leading-relaxed
            prose-p:my-2 sm:prose-p:my-3 lg:prose-p:my-4
            prose-ul:my-2 prose-ol:my-2 prose-li:my-1
            prose-headings:mt-6 prose-headings:mb-3 py-2">
            <slot />
        </div>  
        
        
        {archivo ? (
            <a
                href={archivo}
                target="_blank"
                download={`${archivo}`}
                class="mt-6 relative inline-flex items-center justify-center p-0.5 mb-2 me-2 overflow-hidden text-sm font-medium text-gray-900 rounded-lg group bg-gradient-to-br from-purple-500 to-pink-500 group-hover:from-purple-500 group-hover:to-pink-500 hover:text-white hover:scale-110 dark:text-white focus:ring-4 focus:outline-none focus:ring-purple-200 dark:focus:ring-purple-800"
            >
                <span class="relative flex items-center gap-1 px-3 py-2 transition-all ease-in duration-75 bg-white dark:bg-gray-900 rounded-md group-hover:bg-transparent group-hover:dark:bg-transparent">
                    <Download class="size-5" /> {archivo}
                </span>
            </a>
        ) : null}
    </li>
</ol>

